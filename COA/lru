#include <stdio.h>

int main() 
{
    int n=5,cache[3],inputs[100],lru[100];
    int hit=0,flag;
    int c=0;

    inputs[0]=2;
    inputs[1]=3;
    inputs[2]=2;
    inputs[3]=1;
    inputs[4]=5;
    
    for(int i=0;i<n;i++)
    {
        if(c==0)
        {
            cache[c]=inputs[i];
            lru[c]=inputs[i];
            c++;
        }
        else if(c!=0 && c!=2)
        {
            flag=0;
            for(int j=0;j<c;j++)
            {
                if(cache[j]==inputs[i])
                {
                    hit = hit+1;
                    flag=1;
                }
            }
            if(flag==0)
            {
                cache[c]=inputs[i];
                c++;
            }
        }
        else if(c==2)
        {
            flag=0;
            for(int j=0;j<c;j++)
            {
                if(cache[j]==inputs[i])
                {
                    hit = hit+1;
                    flag=1;
                }
            }
            if(flag==0)
            {
                cache[c]=inputs[i];
                c++;
            }
        }
        else if(c>2)
        {
            
        }
    }
    printf("HIT IS %d",hit);
    return 0;
}
